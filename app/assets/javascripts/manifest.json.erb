<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "Birl App",
  "short_name": "birl",
  "start_url": "/",
  "icons": [
  <% icon_sizes.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "icons/#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#FF0000",
  "background_color": "#FFFFFF",
  "display": "fullscreen",
  "orientation": "portrait"
}
